{
    "manifest_version": 2,
 
    "name": "BooksReader",

    "description": "This extension will browes the books for reading.",
    "version": "1.0",
 
    "permissions": ["tabs"],

    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "icon.png"
    },

    "permissions": ["activeTab"],

    "manifest_version": 2
}